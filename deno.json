{
  "fmt": {
    "proseWrap": "never",
    "singleQuote": true,
    "semiColons": false,
    "lineWidth": 120,
    "exclude": ["dist", "audio", "www/static"]
  },
  "lint": {
    "exclude": ["dist", "audio", "www/static"]
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "npm:solid-js"
  },
  "tasks": {
    "build": "deno run -A build.ts build",
    "dev": "deno run -A build.ts dev",
    "test": "deno fmt && deno lint && deno test -A"
  }
}
